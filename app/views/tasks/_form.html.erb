<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :content, label: false, require: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Content" %>
    
 

 
    <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
  	<%= link_to "<i class='fa fa-angle-left' aria-hidden='true'></i> Back".html_safe, tasks_path, class: "btn btn-lg btn-primary btn-block"  %>
<% end %>
